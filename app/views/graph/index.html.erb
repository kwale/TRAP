<% content_for :title do %>
    Test Status by Platform
<% end %>

<% content_for :legend do %>
    <ul id="legend"></ul>
<% end %>

<%= javascript_include_tag "jquery" %>
<%= javascript_include_tag "jit-yc" %>
<%= javascript_include_tag "graphs" %>

<script>

    $(document).ready(function() {
        var labels = ['pass', 'fail', 'error'];
        var chart = barChart({id: 'sys_test'});

        loadGraphData("/test_status_by_tag.json", chart, loadBarGraphDataAndLegend, { labels: labels });
        loadStandardBarChart("/test_status_by_tag.json", {id: 'rsit', labels: labels});
        loadStandardBarChart("/test_status_by_tag.json", {id: 'uat', labels: labels});
        loadStandardBarChart("/test_status_by_tag.json", {id: 'ntf', labels: labels});

    });

</script>
<div class="graph"><h2>System Test</h2><div id="sys_test"></div></div>
<div class="graph"><h2>RSIT</h2><div id="rsit"></div></div>
<div class="graph"><h2>UAT</h2><div id="uat"></div></div>
<div class="graph"><h2>NTF</h2><div id="ntf"></div></div>
